<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ constant('\\App\\Sample\\Common::BLOG_TITLE') }}</title>
  </head>
  <body>
    <h1>{{ constant('\\App\\Sample\\Common::BLOG_TITLE') }}</h1>
    <hr>
    <h2>Article List</h2>
    <ul>

      {% for article in articles %}
        <li>
          {{ article.date|e}}
          <a href="/articles/{{article.id}}">
            {{ article.title|e }}
          </a>
        </li>
      {% endfor %}
    </ul>

  </body>
</html>
